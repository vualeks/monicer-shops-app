<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="EditTextLogin">
    <item name="android:textColor">@color/colorLightText</item>
    <item name="android:background">@drawable/login_edittext_background</item>
    <item name="android:textSize">18sp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">11dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:paddingStart">21dp</item>
    <item name="android:fontFamily">@font/calluna_sans_regular</item>
  </style>

  <style name="ButtonLogin">
    <item name="android:textColor">@color/colorLightText</item>
    <item name="android:background">@drawable/login_button_background</item>
    <item name="android:textSize">16sp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">11dp</item>
    <item name="android:fontFamily">@font/calluna_sans_bold</item>
  </style>

  <style name="ButtonPayment">
    <item name="android:textColor">@color/colorLightText</item>
    <item name="android:background">@drawable/payment_button_background</item>
    <item name="android:textSize">20sp</item>
    <item name="android:paddingTop">72dp</item>
    <item name="android:paddingBottom">21dp</item>
    <item name="android:fontFamily">@font/calluna_sans_bold</item>
  </style>

  <style name="TextViewTitle">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">22sp</item>
    <item name="android:fontFamily">@font/calluna_sans_bold</item>
  </style>

  <style name="TextViewDescription">
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/colorDarkText</item>
    <item name="android:textSize">18sp</item>
    <item name="android:fontFamily">@font/calluna_sans_regular</item>
  </style>

  <style name="MenuItem">
    <item name="android:textSize">12sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">@font/calluna_sans_bold</item>
  </style>
</resources>
